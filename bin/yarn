#!/usr/bin/env ruby
# This script redirects yarn calls to pnpm for compatibility
APP_ROOT = File.expand_path('..', __dir__)
Dir.chdir(APP_ROOT) do
  # Use pnpm instead of yarn
  exec 'pnpm', *ARGV
rescue Errno::ENOENT
  warn 'pnpm executable was not detected in the system.'
  warn 'Install pnpm: npm install -g pnpm'
  exit 1
end
